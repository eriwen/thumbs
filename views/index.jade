h2 Add Subject
form#add_subject(method: 'post', action: '/subject/new')
	p
		| Create a new subject
	label Name:
		input(type: 'text', name: 'subject[name]', id: 'subject_name')
	input(type: 'submit', value: 'Create Subject')

h2 Subject List
ul#subjects
	- each subject in subjects
		li
			input(type: 'checkbox', name: 'subject_id')
			a(href='/subject/' + subject._id)= subject.name
			span.rating= " " + subject.rating
			