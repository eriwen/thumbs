// Functions
border-radius()
	-webkit-border-radius arguments; -moz-border-radius arguments; border-radius arguments

transition()
	-webkit-transition arguments; -moz-transition arguments; -o-transition arguments; transition arguments

// Variables
max-width = 960px

// Main Styles
body
	font 36px helvetica, arial, sans-serif; color #333; max-width max-width; margin 0px auto

h2
	font-size 0.9em
	margin-top 1em
	color #009

.subject
	margin-top 5px; background-color #DDF; padding 5px; border-radius(7px)
	&:hover
		background-color #DFD; cursor pointer; transition(background-color .3s ease-in-out)
	& a
		display block; color #000
	& .name
		float left
	& .stars
		float right

a
	text-decoration none

.name
	display inline-block; width 640px; overflow ellipsis

.clear
	clear both

.stars img
	padding 7px 10px; vertical-align top

.notes
	font-size 0.7em; font-style italic; padding-left 30px; margin-top 10px

.admin a
	color #000; font-size 0.7em; margin-left 95px; padding 5px 40px; border-radius(7px)
	&.back 
		background-color #DFD
	&.archive 
		background-color #FFD
	&.delete
		background-color #FDD

form
	background-color #DDD; border-radius(7px); padding 3px 5px 7px 8px; margin-top 5px

form input[type=text]
	width 80%; height 40px; font-size 24px; vertical-align bottom

form input[type=submit]
	width 18%; height 45px; margin-left 12px; font-size 20px

form input
	border 1px solid

form p
	font-size 0.6em
