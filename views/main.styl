// Functions
border-radius()
	-webkit-border-radius arguments
	-moz-border-radius arguments
	border-radius arguments

// Variables
max-width = 800px
create-form-height = 42px

// Main Styles
body
	font 24px helvetica, arial, sans-serif
	color #333
	max-width max-width
	margin 0px auto

.subject
	margin-bottom 5px
	background-color #DDF
	padding 5px
	border-radius(7px)
	&:hover
		background-color #DFD
		cursor pointer
	& .name
		float left
	& .stars
		float right

.clear
	clear both

#newsubject
	background-color #DDD
	border-radius(7px)
	padding 5px
	& input[type=text]
		vertical-align bottom
		width 80%
		// TODO: use variables here
		height 37px
	& input[type=submit]
		width 17%
		height create-form-height
		margin-left 10px
		font-size 20px
	
form input
	padding 5px
	border 1px solid
