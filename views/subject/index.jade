h2 Create Subject
	form(action: '/subject/create')
		input(type: 'hidden', name: '_method', value: 'put')
		input(type: 'text', name: 'subject[name]')

h2 Subject List
ul#subjects
	- each subject, id in subjects
		li
			a(href='/subject/' + id)= subject.name
			a.edit(href: '/subject/' + id + '/update') update
			a.delete(href: '/subject/' + id + '/delete') delete