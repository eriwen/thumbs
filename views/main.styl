// Functions
border-radius()
	-webkit-border-radius arguments
	-moz-border-radius arguments
	border-radius arguments

transition()
	-webkit-transition arguments
	-moz-transition arguments
	-o-transition arguments
	transition arguments

// Variables
max-width = 960px

// Main Styles
body
	font 36px helvetica, arial, sans-serif
	color #333
	max-width max-width
	margin 0px auto

.subject
	margin-top 5px
	background-color #DDF
	padding 5px
	border-radius(7px)
	&:hover
		background-color #DFD
		cursor pointer
		transition(background-color .3s ease-in-out)
	& .name
		float left
	& .stars
		float right

.detail
	display none

.active
	background-color #FDD
	transition(background-color .3s ease-in-out)
	& .detail
		display block

.clear
	clear both

.name
	display inline-block
	width 640px

.stars img
	margin-left 20px

.addnote
	padding 5px

.notes
	font-size 0.7em
	font-style italic
	padding-left 30px
	margin-top 10px

#newsubject
	background-color #DDD
	border-radius(7px)
	padding 5px
	margin-top 5px

form input[type=text]
	vertical-align bottom
	width 80%
	// TODO: use variables here
	height 37px
	font-size 24px

form input[type=submit]
	width 16%
	height 42px
	margin-left 10px
	font-size 20px

form input
	border 1px solid
